<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="postpc.huji.multithreaded.AsyncActivity">

    <Button
        android:id="@+id/async_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Create"
        app:layout_constraintBottom_toTopOf="@+id/async_start"
        app:layout_constraintStart_toStartOf="@+id/async_start" />

    <Button
        android:id="@+id/async_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/async_cancel"
        app:layout_constraintStart_toStartOf="@+id/async_cancel" />

    <Button
        android:id="@+id/async_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/async_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:layout_marginStart="15dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/async_create"
        app:layout_constraintStart_toStartOf="@+id/async_create" />

</android.support.constraint.ConstraintLayout>
